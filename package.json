{
  "name": "maptalks.deckgl",
  "version": "1.0.0",
  "author": "https://twitter.com/fuzhenn",
  "homepage": "https://github.com/sakitam-gis/maptalks.deckgl",
  "description": "A maptalks Layer to render with deck.gl.",
  "repository": {
    "type": "git",
    "url": "https://github.com/maptalks/maptalks.deckgl.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "deck.gl",
    "maptalks",
    "webgl",
    "gis"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "packages:build": "node scripts/build.js",
    "packages:release": "node scripts/release.js",
    "docs:dev": "lerna run --stream --scope vuepress-docs docs:dev",
    "docs:build": "lerna run --stream --scope vuepress-docs docs:build",
    "docs:release": "lerna run --stream --scope vuepress-docs docs:release",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest --coverage && yarn test:tsd",
    "cm": "git-cz",
    "postinstall": "yarn bootstrap"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "resolutions": {
    "@loaders.gl/core": "^2.3.0-alpha.12",
    "@loaders.gl/draco": "^2.3.0-alpha.12",
    "@loaders.gl/loader-utils": "^2.3.0-alpha.12",
    "@loaders.gl/3d-tiles": "^2.3.0-alpha.12",
    "@loaders.gl/mvt": "^2.3.0-alpha.12",
    "@loaders.gl/terrain": "^2.3.0-alpha.12",
    "@loaders.gl/tiles": "^2.3.0-alpha.12"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^5.0.2",
    "@babel/preset-typescript": "^7.7.4",
    "@babel/types": "^7.7.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "babel-eslint": "^10.1.0",
    "chalk": "^4.1.0",
    "codecov": "^3.5.0",
    "commitizen": "^4.1.5",
    "coveralls": "^3.0.9",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "execa": "^4.0.3",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "jest": "^26.0.1",
    "jest-config": "^26.4.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "ora": "^5.0.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.11",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-esbuild": "^2.5.0",
    "semver": "^7.3.2",
    "tslib": "^2.0.1",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "ts-node": "^9.0.0",
    "typescript": "4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "license": "MIT"
}
